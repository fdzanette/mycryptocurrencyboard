<div class="container">
  <div class="form-wrap">
    <h3 class="text-center">Add to portfolio</h3>

     <div class="form-content">
        <%= simple_form_for [@crypto] do |f| %>
          <%= f.input :name, label: "Name", input_html: { id: 'edit-name'} %>
          <%= f.input :price, label: "Price paid", :autofocus => true %>
          <%= f.input :total, label: "Total" %>
          <%= f.submit "Edit", class: "btn btn-success" %>
        <% end %>
    </div>
      <br>
    <div class="btn-back">
      <%= link_to "Back", user_portfolio_cryptos_path, class: "btn btn-info" %>
    </div>
  </div>
</div>
