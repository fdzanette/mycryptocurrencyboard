<div class="container">
  <div class="home-title">
    <h4 class="text-center">CRYPTO CURRENCY MARKET TABLE</h4>
  </div>
  <table class="table table-striped table-bordered table-hover">
     <thead class="text-center">
      <tr>
         <td>Crypto</td>
         <td class="hidden-xs hidden-sm">Ticker</td>
         <td>Price</td>
         <td>% Change</td>
         <td class="hidden-xs hidden-sm">Volume Last 24h</td>
         <td class="hidden-xs hidden-sm">Market Cap</td>
         <td></td>
       </tr>
     </thead>
   <% @cryptos.each_with_index do |crypto, num| %>
    <tbody>
      <tr>
        <td class="text-center crypto-name"><%= crypto['nome']%></td>
        <td class="text-center hidden-xs hidden-sm"><%= crypto['ticker'] %></td>
        <td class="text-center"><%= number_to_currency(crypto['preco'], precision: 4) %></td>
        <td class="text-center"><%= crypto['change'] %>%</td>
        <td class="text-center hidden-xs hidden-sm"><%= number_to_currency(crypto['volume'].to_f.round(2)) %></td>
        <td class="text-center hidden-xs hidden-sm"><%= number_to_currency(crypto['market_cap']) %></td>
        <td class="text-center"> <%= link_to "Add to portfolio", new_crypto_path, id: "#{crypto['nome']}" %>  </td>
      </tr>
    </tbody>
  <% end %>
  </table>
</div>
