<div class="container">
  <h4 class="text-center">CRYPTO CURRENCY MARKET TABLE</h4>
  <table class="table table-striped table-bordered table-hover">
     <thead class="text-center">
      <tr>
         <td>Crypto</td>
         <td>Ticker</td>
         <td>Price</td>
         <td>% Change</td>
         <td>Volume Last 24h</td>
         <td>Market Cap</td>
         <td></td>
       </tr>
     </thead>
   <% @cryptos.each_with_index do |crypto, num| %>
    <tbody>
      <tr>
        <td class="text-center"><%= crypto['nome']%></td>
        <td class="text-center"><%= crypto['ticker'] %></td>
        <td class="text-center"><%= number_to_currency(crypto['preco'], precision: 4) %></td>
        <td class="text-center"><%= crypto['change'] %>%</td>
        <td class="text-center"><%= number_to_currency(crypto['volume'].to_f.round(2)) %></td>
        <td class="text-center"><%= number_to_currency(crypto['market_cap']) %></td>
        <td class="text-center"> <%= link_to "Add to portfolio", new_crypto_path, id: "btn-add" %>  </td>
      </tr>
    </tbody>
  <% end %>
  </table>
</div>
