<div class="container">
  <div class="home-title">
    <h4 class="text-center"> Currency added do portfolio </h4>
  </div>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <td> Name </td>
        <td> Price </td>
        <td> Total </td>
      </tr>
    </thead>
      <tbody>
        <tr>
          <td> <%= @crypto.name %> </td>
          <td> <%= number_to_currency(@crypto.price) %> </td>
          <td> <%= @crypto.total %> </td>
        </tr>
      </tbody>
  </table>
  <div class="link-to-portfolio">
    <%= link_to "View portfolio", user_portfolio_cryptos_path, class: "btn btn-success" %>
  </div>
  <div class="btn-home">
    <%= link_to "Back to market table", root_path %>
  </div>
</div>
